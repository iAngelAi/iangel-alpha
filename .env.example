# ═══════════════════════════════════════════════════════════════════════════
# .env.example — iAngel Alpha Backend
# Copier vers .env et remplir les valeurs
# ═══════════════════════════════════════════════════════════════════════════

# === Core Application ===
ENVIRONMENT=development
DEBUG=true
APP_VERSION=0.1.0-alpha
SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32

# === API Configuration ===
API_V1_PREFIX=/api/v1
ALLOWED_HOSTS=*

# === Database (Phase S2) ===
# PostgreSQL via Railway ou local
DATABASE_URL=postgresql://user:password@localhost:5432/iangel_alpha

# === Anthropic Claude API ===
ANTHROPIC_API_KEY=sk-ant-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_MAX_TOKENS=1024
ANTHROPIC_TIMEOUT_SECONDS=30

# === Railway Deployment ===
PORT=8000
RAILWAY_ENVIRONMENT=production

# === Monitoring (Phase S2-S3) ===
SENTRY_DSN=
UPTIMEROBOT_API_KEY=

# === Sandbox P4 (Alpha = mocks prédéfinis uniquement) ===
SANDBOX_MODE=true
MOCKS_DIR=./mocks
DEFAULT_MOCK_ID=M01
